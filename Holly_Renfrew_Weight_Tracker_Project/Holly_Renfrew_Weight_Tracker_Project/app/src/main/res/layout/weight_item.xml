<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <!-- Weight entry display -->
    <TextView
        android:id="@+id/textWeightEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/date_weight_lbs"
        android:textSize="16sp"
        android:textColor="@color/headlineColor" />

    <!-- Update button -->
    <ImageButton
        android:id="@+id/buttonUpdateEntry"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/update"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:tint="@color/headlineColor" />

    <!-- Delete button -->
    <ImageButton
        android:id="@+id/buttonDeleteEntry"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/delete"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:tint="@color/red" />

</LinearLayout>
